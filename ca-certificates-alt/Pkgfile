# Description: Alternative format ca-certificates bundle based on LFS
# URL: https://hg.mozilla.org/releases/mozilla-release/file/default/security/nss/lib/ckfw/builtins/certdata.txt
# Maintainer: Matt Housh, jaeger at crux dot ninja

name=ca-certificates-alt
version=20160515
release=1
source=(certdata.txt make-ca.sh make-cert.pl)

build() {
    ./make-ca.sh
    install -d -m 0755 $PKG/etc/ssl/certs
    install -m 0644 certs/* $PKG/etc/ssl/certs/
    install -m 0644 ca-bundle-$version.crt \
        $PKG/etc/ssl/certs/ca-certificates.crt
}
