# Description: Fast, lightweight, standards-compliant window manager. (git checkout)
# URL:         https://github.com/onodera-punpun/openbox 
# Packager:    onodera, onodera at openmailbox dot org
# Maintainer:  onodera, https://github.com/onodra-punpun/crux-ports/issues
# Depends on:  git xorg-server pango

name=openbox
version=git
release=3
source=()

build() {
	cd $PKGMK_SOURCE_DIR

	if cd $name; then
		git fetch -q; git reset --hard origin/master
	else
		git clone git://github.com/onodera-punpun/openbox $name
		cd $name
	fi

	./bootstrap
	./configure \
		--prefix=/usr \
		--libexecdir=/usr/lib \
		--disable-imlib2 \
		--disable-librsvg \
		--disable-session-management \
		--disable-xkb \
		--disable-xinerama \
		--disable-xsync \
		--disable-nls

	make
	make DESTDIR=$PKG install

	rm -rf $PKG/usr/share/doc/openbox
}
