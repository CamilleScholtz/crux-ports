# Description: Fast, lightweight, standards-compliant window manager.
# URL:         https://github.com/onodera-punpun/openbox
# Maintainer:  onodera, https://github.com/onodra-punpun/crux-ports/issues
# Depends on:  git xorg-server pango

name=openbox
version=git
release=3
source=()

download_git() {
	if [[ -d $PKGMK_SOURCE_DIR/$name ]]; then
		git -C $PKGMK_SOURCE_DIR/$name fetch --depth=1
		git -C $PKGMK_SOURCE_DIR/$name clean -f
		git -C $PKGMK_SOURCE_DIR/$name reset --hard origin/$2
	else
		git -C $PKGMK_SOURCE_DIR clone --depth=1 $1 -b $2 $name
	fi

	cp -r $PKGMK_SOURCE_DIR/$name $PKGMK_WORK_DIR/src/$name
}

build() {
	download_git https://github.com/onodera-punpun/openbox master
	cd $name

	./bootstrap
	./configure \
		--prefix=/usr \
		--libexecdir=/usr/lib \
		--disable-imlib2 \
		--disable-librsvg \
		--disable-session-management \
		--disable-xkb \
		--disable-xinerama \
		--disable-xsync \
		--disable-nls

	make
	make DESTDIR=$PKG install

	rm -rf $PKG/usr/share/doc/openbox
}
