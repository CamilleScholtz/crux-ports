# Description: Fast, cross-platform HTTP/2 web server with automatic HTTPS.
# URL:         https://caddyserver.com
# Maintainer:  onodera, https://github.com/onodera-punpun/crux-ports/issues
# Depends on:  go

name=caddy
version=2.0.0-beta.14
release=1
source=(
	plugins.go
	caddy.conf
	caddy
)

build() {
	export GOPATH=$(pwd)

	mkdir -p src/github.com/punpun/caddy
	cd src/github.com/punpun/caddy
	cp $SRC/plugins.go main.go
	go mod init caddy
	# Temp fix, remove this
	go get -v github.com/onodera-punpun/punfed@4a3927d
	go get -v github.com/caddyserver/$name/v2@v$version

	#sed -i 's/upload/punfed/g' $SRC/pkg/mod/github.com/caddyserver/caddy@v$version/caddyhttp/httpserver/plugin.go

	#go build -v -ldflags "-X github.com/mholt/caddy/caddy/caddymain.gitTag=$version"

	go build -v

	install -Dm755 caddy $PKG/usr/sbin/caddy
	install -Dm755 $SRC/caddy $PKG/etc/rc.d/caddy
	install -Dm644 $SRC/caddy.conf $PKG/etc/caddy/caddy.conf
}
