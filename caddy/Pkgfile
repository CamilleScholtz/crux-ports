# Description: Fast, cross-platform HTTP/2 web server with automatic HTTPS.
# URL:         https://caddyserver.com
# Maintainer:  onodera, https://github.com/6c37/crux-ports-git/issues
# Depends on:  

name=caddy
version=git
release=1
source=(
	"https://caddyserver.com/download/build?os=linux&arch=amd64&features=search%2Cupload%2Cvultr"
	caddy.conf
	caddyd
)

build() {
	bsdtar -xf "build?os=linux&arch=amd64&features=search%2Cupload%2Cvultr"
	install -Dm755 caddy $PKG/usr/sbin/caddy                                                                                          
	install -Dm755 caddyd $PKG/etc/rc.d/caddy                                                                                          
	install -Dm644 caddy.conf $PKG/etc/caddy/caddy.conf     
}
