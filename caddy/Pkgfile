# Description: Fast, cross-platform HTTP/2 web server with automatic HTTPS.
# URL:         https://caddyserver.com
# Maintainer:  onodera, https://github.com/onodera-punpun/crux-ports/issues
# Depends on:  go

name=caddy
version=git
release=9
source=(
	plugins.go
	caddy.conf
	caddy
)

build() {
	export GOPATH=$(pwd)
	export GO111MODULE=on

	mkdir -p src/github.com/crux/caddy
	cd src/github.com/crux/caddy
	cp $SRC/plugins.go .
	go mod init caddy
	go get -v github.com/mholt/$name

	sed -i 's/upload/punfed/g' $SRC/pkg/mod/github.com/mholt/caddy@v1.0.0/caddyhttp/httpserver/plugin.go

	go build -v

	install -Dm755 caddy $PKG/usr/sbin/caddy
	install -Dm755 $SRC/caddy $PKG/etc/rc.d/caddy
	install -Dm644 $SRC/caddy.conf $PKG/etc/caddy/caddy.conf
}
