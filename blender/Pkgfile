# Description: A fully integrated 3D graphics creation suite.
# URL:         https://blender.org/
# Maintainer:  onodera, https://github.com/onodera-punpun/crux-ports/issues
# Depends on:  git boost desktop-file-utils ffmpeg fftw glew glu python3 openimageio opencolorio
# Optional:    opencl-amd

name=blender
version=2.79b
release=1
source=(
	https://download.$name.org/source/$name-$version.tar.gz
	https://gitweb.gentoo.org/repo/gentoo.git/plain/media-gfx/blender/files/$name-${version}-gcc-8.patch
	https://gitweb.gentoo.org/repo/gentoo.git/plain/media-gfx/blender/files/$name-${version}-ffmpeg-4-compat.patch
	https://src.fedoraproject.org/rpms/$name/raw/master/f/$name-oiio2.patch
)

build() {
	cd $name-$version

	patch -p1 <$SRC/$name-${version}-gcc-8.patch
	patch -p1 <$SRC/$name-${version}-ffmpeg-4-compat.patch
	patch -p1 <$SRC/${name}-oiio2.patch

	mkdir build && cd build
	cmake -C ../build_files/cmake/config/${name}_release.cmake ../ \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_BUILD_TYPE=Release \
		-DWITH_INSTALL_PORTABLE=OFF \
		-DWITH_INTERNATIONAL=OFF \
		-DWITH_PYTHON=ON \
		-DPYTHON_VERSION=3.7 \
		-DPYTHON_LIBPATH=/usr/lib \
		-DPYTHON_LIBRARY=python3.7m \
		-DPYTHON_INCLUDE_DIRS=/usr/include/python3.7m \
		-DWITH_PYTHON_INSTALL=OFF \
		-DOPENIMAGEIO_ROOT_DIR=/usr \
		-DWITH_CYCLES=ON \
		-DWITH_CYCLES_NATIVE_ONLY=ON \
		-DWITH_CYCLES_PTEX=OFF \
		-DWITH_SYSTEM_OPENJPEG=ON \
		-DWITH_SYSTEM_LZO=ON \
		-DWITH_LLVM=ON

	make
	make DESTDIR=$PKG install

	python3 -m compileall $PKG/usr/share/$name
	python3 -O -m compileall $PKG/usr/share/$name

	rm -rf $PKG/usr/share/{doc,$name/${version%[a-z]}/scripts/addons/cycles/license}
	find $PKG -iname 'readme*' -delete
}
