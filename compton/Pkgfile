# Description: A compositor for X.
# URL:         https://github.com/chjj/compton
# Maintainer:  onodera, https://github.com/onodera-punpun/crux-ports/issues
# Depends on:  git libpcre mesa3d xorg-xcb-util-renderutil xorg-xcb-util-image xorg-libxcomposite xorg-libxinerama xorg-libxrandr xorg-libxdamage libev meson ninja uthash

name=compton
version=git
release=5
source=()

download_git() {
	if [[ -d $PKGMK_SOURCE_DIR/$name ]]; then
		git -C $PKGMK_SOURCE_DIR/$name fetch --depth=1
		git -C $PKGMK_SOURCE_DIR/$name clean -f
		git -C $PKGMK_SOURCE_DIR/$name reset --hard origin/$2
	else
		git -C $PKGMK_SOURCE_DIR clone --depth=1 $1 -b $2 $name
	fi

	cp -r $PKGMK_SOURCE_DIR/$name $PKGMK_WORK_DIR/src/$name
}

build() {
	download_git https://github.com/yshui/$name master
	cd $name

	meson build \
		--prefix /usr \
		--buildtype release \
		-Ddbus=false \
		-Dconfig_file=false

	DESTDIR=$PKG ninja -C build -j ${JOBS:-1} install
}
