# Description: Pluggable Authentication Moduleslibrary.
# URL:         https://linux-pam.org
# Maintainer:  onodera, https://github.com/onodera-punpun/crux-ports/issues
# Depends on:

name=pam
version=1.3.1
release=1
source=(https://github.com/linux-$name/linux-$name/releases/download/v$version/Linux-PAM-$version.tar.xz)

build() {
	cd Linux-PAM-$version

	./configure \
		--prefix=/usr \
		--libdir=/usr/lib \
		--disable-db \
		--disable-nls

	make
	make DESTDIR=$PKG install

	chmod +s $PKG/sbin/unix_chkpwd
}
